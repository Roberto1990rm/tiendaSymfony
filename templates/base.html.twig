{# templates/base.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Bienvenido{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
 body {
    background-color: #DDEEFF;
}
 </style>
</head>
<body>
<!-- Navbar de Bootstrap -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="{{ path('welcome') }}"><img style="width: 90px; height: 90px;" src="/images/logo.png" alt="Logo de Mi Sitio"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
  
            <li class="nav-item">
                <a class="nav-link" href="{{ path('welcome') }}">Inicio</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('product_index') }}">Lista de Productos</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('product_create') }}">Crear Producto</a>
            </li>
{% if app.user %}
    <li class="nav-item">
        <span class="navbar-text">¡Hola, {{ app.user.username }}!</span>
    </li>

        <a class="ml-3" href="{{ path('app_logout') }}">Logout</a>
  
{% else %}
    <li class="nav-item">
        <a class="nav-link" href="{{ path('app_register') }}">
            <i class="fas fa-user-plus"></i> Registro
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="{{ path('app_login') }}">
            <i class="fas fa-sign-in-alt"></i> Login
        </a>
    </li>
{% endif %}

   


            <!-- Más elementos del menú aquí -->
        </ul>
    </div>
    
</nav>

    <div class="container">
        {% block body %}{% endblock %}
    </div>
<!-- Footer -->
<footer class="text-center text-lg-start bg-light text-muted">
    <!-- Sección: Redes sociales -->
    <section class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom">
        <!-- Links de redes sociales -->
        <div class="me-5 d-none d-lg-block">
            <span>Conéctate con nosotros en redes sociales:</span>
        </div>
        <div>
           <a href="https://www.facebook.com/tuPerfil" class="me-4 text-reset">
    <i class="fab fa-facebook-f"></i>
</a>
<a href="https://www.twitter.com/tuPerfil" class="me-4 text-reset">
    <i class="fab fa-twitter"></i>
</a>
       <a href="https://www.google.com/" class="me-4 text-reset" target="_blank">
    <i class="fab fa-google"></i>
</a>
<a href="https://www.instagram.com/tuNombreDeUsuario" class="me-4 text-reset" target="_blank">
    <i class="fab fa-instagram"></i>
</a>
<a href="https://www.linkedin.com/in/tuNombreDeUsuario" class="me-4 text-reset" target="_blank">
    <i class="fab fa-linkedin"></i>
</a>
<a href="https://github.com/tuNombreDeUsuario" class="me-4 text-reset" target="_blank">
    <i class="fab fa-github"></i>
</a>

        </div>
    </section>
    <!-- Sección: Links rápidos -->
    <section class="">
        <div class="container text-center text-md-start mt-5">
            <!-- Grid row -->
            <div class="row mt-3">
                <!-- Grid column -->
                <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                    <!-- Content -->
                    <h6 class="text-uppercase fw-bold mb-4">
                        <i class="fas fa-gem me-3"></i>MovilYa
                    </h6>
                    <p>
                        Aquí puedes usar una descripción corta sobre tu empresa o tus servicios.
                    </p>
                </div>
                <!-- Grid column -->

                <!-- Más columnas según sea necesario -->

            </div>
            <!-- Grid row -->
        </div>
    </section>
    <!-- Sección: Derechos de autor -->
    <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.05);">
        © 2023 Derechos Reservados:
        <a class="text-reset fw-bold" href="{{ path('welcome') }}">MovilYa.com</a>
    </div>
</footer>

    <!-- Scripts de Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
